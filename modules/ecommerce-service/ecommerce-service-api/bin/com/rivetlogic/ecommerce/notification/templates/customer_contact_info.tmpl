<table bgcolor="#e3e3e3" border="0" cellpadding="0" cellspacing="0" width="620">
	<tr>
		<td style="padding-left: 16px;">
			<p style="font-weight: bold;">
				<span style="font-weight: normal;">Name:</span>
				<br>
				$shoppingOrder.customerName
			</p>
		</td>
	</tr>
</table>
<table bgcolor="#e3e3e3" border="0" cellpadding="0" cellspacing="0" width="620">
	<tr>
		<td style="padding-left: 16px;">
			<p style="font-weight: bold;">
				<span style="font-weight: normal;">Address:</span>
				<br>
				$shoppingOrder.shippingAddress1. $shoppingOrder.shippingAddress2
			</p>
		</td>
	</tr>
</table>
<table bgcolor="#e3e3e3" border="0" cellpadding="0" cellspacing="0" width="620">
	<tr>
		<td style="padding-left: 16px;">
			<p style="font-weight: bold;">
				<span style="font-weight: normal;">Country:</span>
				<br>
				$shoppingOrder.shippingCountry
			</p>
		</td>
	</tr>
</table>
<table bgcolor="#e3e3e3" border="0" cellpadding="0" cellspacing="0" width="620">
	<tr>
		<td style="padding-left: 16px;">
			<p style="font-weight: bold;">
				<span style="font-weight: normal;">State/Province:</span>
				<br>
				$shoppingOrder.shippingStateProvince
			</p>
		</td>
	</tr>
</table>
<table bgcolor="#e3e3e3" border="0" cellpadding="0" cellspacing="0" width="620">
	<tr>
		<td style="padding-left: 16px;">
			<p style="font-weight: bold;">
				<span style="font-weight: normal;">City:</span>
				<br>
				$shoppingOrder.shippingCity
			</p>
		</td>
	</tr>
</table>
#if ($shoppingOrder.shippingPostalCode && !$shoppingOrder.shippingPostalCode.empty)
<table bgcolor="#e3e3e3" border="0" cellpadding="0" cellspacing="0" width="620">
	<tr>
		<td style="padding-left: 16px;">
			<p style="font-weight: bold;">
				<span style="font-weight: normal;">Postal Code:</span>
				<br>
				$shoppingOrder.shippingPostalCode
			</p>
		</td>
	</tr>
</table>
#end
#if ($shoppingOrder.customerPhone && !$shoppingOrder.customerPhone.empty)
<table bgcolor="#e3e3e3" border="0" cellpadding="0" cellspacing="0" width="620">
	<tr>
		<td style="padding-left: 16px;">
			<p style="font-weight: bold;">
				<span style="font-weight: normal;">Phone:</span>
				<br>
				$shoppingOrder.customerPhone
			</p>
		</td>
	</tr>
</table>
#end